# ====================
# Development Settings
# ====================

# Database Configuration
# For development: use SQLite
DATABASE_URL=sqlite:///./music_scout.db
# For production with PostgreSQL (optional):
# DATABASE_URL=postgresql://music_scout:password@localhost:5432/music_scout_db

# Redis Configuration (not currently used, can be removed)
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
LOG_LEVEL=INFO

# CORS Configuration (development allows all origins)
ALLOWED_ORIGINS=

# ====================
# Production Settings (Render.com)
# ====================
# Copy these to Render dashboard Environment Variables:
#
# DATABASE_URL=sqlite:////data/music_scout.db
# API_HOST=0.0.0.0
# API_PORT=8000
# DEBUG=false
# LOG_LEVEL=INFO
# ALLOWED_ORIGINS=https://your-frontend.onrender.com
# SPOTIFY_CLIENT_ID=your_spotify_client_id
# SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# ====================
# External APIs
# ====================

# MusicBrainz API (fallback for metadata)
MUSICBRAINZ_API_URL=https://musicbrainz.org/ws/2

# Spotify API (REQUIRED for metadata enrichment)
# Get these from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_client_id_here
SPOTIFY_CLIENT_SECRET=your_client_secret_here

# ====================
# Future Features
# ====================

# Email Configuration (Phase 5 - weekly digests)
EMAIL_SERVICE=
EMAIL_API_KEY=